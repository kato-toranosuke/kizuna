                    <div class="control">
                        <input class="input is-small" name="saturday" type="text" placeholder="8:00~14:00, 18:00~21:00">
                    </div>
                </div>
            </div>
        </div>
                <div class="field is-horizontal">
            <div class="field-label is-small">
                <label class="label">
                    <span class="icon">
                        <i class="far fa-clock"></i>
                    </span> 日曜日</label>
            </div>
            <div class="field-body">
                <div class="field is-narrow">
                    <div class="control">
                        <input class="input is-small" name="sunday" type="text" placeholder="8:00~14:00, 18:00~21:00">
                    </div>
                </div>
            </div>
        </div>
        
         <div class="field is-horizontal">
            <div class="field-label is-small">
                <label class="label">
                    <span class="icon">
                        <i class="far fa-credit-card"></i>
                    </span> 電子マネー</label>
            </div>
            <div class="field-body">
                <div class="field is-narrow">
                    <div class="control">
                        <input class="input is-small" name="elec" type="text" placeholder="楽天Edy, Nanaco">
                    </div>
                </div>
            </div>
        </div>
         <div class="field is-horizontal">
            <div class="field-label is-small">
                <label class="label">
                    <span class="icon">
                        <i class="fas fa-credit-card"></i>
                    </span> クレジットカード</label>
            </div>
            <div class="field-body">
                <div class="field is-narrow">
                    <div class="control">
                        <input class="input is-small" name="card" type="text" placeholder="VISA, MasterCard">
                    </div>
                </div>
            </div>
        </div>
        <div class="field is-horizontal">
            <div class="field-label is-small">
                <label class="label">
                    <span class="icon">
                        <i class="fas fa-qrcode"></i>
                    </span> QRコード決済</label>
            </div>
            <div class="field-body">
                <div class="field is-narrow">
                    <div class="control">
                        <input class="input is-small" name="qr" type="text" placeholder="PayPay, LINE Pay">
                    </div>
                </div>
            </div>
        </div>
        <br />




        <div class=" field is-horizontal">
                        <div class="field-label is-small">
                            <label class="label">
                                <span class="icon">
                                    <i class="fab fa-google"></i>
                                </span> Google Map</label>
                        </div>
                        <div class="field-body">
                            <div class="field">
                                <div class="control">
                                    <input class="input is-small" name="googlemap" type="text" placeholder="URL">
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="field is-horizontal">
                        <div class="field-label is-small">
                            <label class="label">
                                <span class="icon">
                                    <i class="fas fa-utensils"></i>
                                </span> 食べログ</label>
                        </div>
                        <div class="field-body">
                            <div class="field">
                                <div class="control">
                                    <input class="input is-small" name="tabelog" type="text" placeholder="URL">
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="field is-horizontal">
                        <div class="field-label is-small">
                            <label class="label">
                                <span class="icon">
                                    <i class="fas fa-home"></i>
                                </span> 公式HP</label>
                        </div>
                        <div class="field-body">
                            <div class="field">
                                <div class="control">
                                    <input class="input is-small" name="homepage" type="text" placeholder="URL">
                                </div>
                            </div>
                        </div>
                    </div>

                    <br />
                    <div class="field is-grouped is-grouped-right">
                        <p class="control">
                            <button class="button is-warning">
                                Submit
                            </button>
                        </p>
                        <p class="control">
                            <button class="button is-light">
                                Cancel
                            </button>
                        </p>
                    </div>
                    <%end %>
                </div>

                <% @stack.each do |st| %>
                <div class="box is-inline-block" id="<%= st.id %>"
                    style=" vertical-align: top; width: 450px; margin: 50px ;">
                    <%= form_tag(url_for(:action => 'ng'), :remote => true) do %>
                    <button class="button is-danger is-light " id="check" style="float: right;">

                        <span class="icon is-large">
                            <i class="fas fa-times"></i>
                        </span>
                    </button>
                    <input type="hidden" name="stid" value="<%= st.id %>">

                    <% end %>

                    <%= form_tag(url_for(:action => 'ok'), :remote => true) do %>
                    <button class="button is-primary is-light " id="check" style="float: right;">

                        <span class="icon  is-large">
                            <i class="fas fa-check"></i>
                        </span>

                    </button>
                    <input type="hidden" name="stid" value="<%= st.id %>">

                    <% end %>
                    <br />
                    <strong style="font-size: 25px;"><%= st.name%></strong>
                    <br />
                    <br />

                    <h6>エリア:<%= st.area %></h6>

                    <h6>
                        <span class="icon">
                            <i class="fas fa-head-side-mask"></i>
                        </span>
                        マスク：<%= st.mask%>
                    </h6>

                    <h6>
                        <span class="icon">
                            <i class="fas fa-thermometer-three-quarters"></i>
                        </span>
                        検温：<%= st.temp%>
                    </h6>

                    <h6>
                        <span class="icon">
                            <i class="fas fa-pump-medical"></i>
                        </span>消毒液：<%= st.alcohol%>
                    </h6>

                    <h6>
                        <span class="icon">
                            <i class="fas fa-shopping-bag"></i>
                        </span>
                        テイクアウト：<%= st.takeout%>
                    </h6>
                    <h6>
                        <span class="icon">
                            <i class="far fa-clock"></i>
                        </span>
                        月曜日：<%= st.monday%>
                    </h6>
                                        <h6>
                        <span class="icon">
                            <i class="far fa-clock"></i>
                        </span>
                        火曜日：<%= st.tuesday%>
                    </h6>
                                        <h6>
                        <span class="icon">
                            <i class="far fa-clock"></i>
                        </span>
                        水曜日：<%= st.wednesday%>
                    </h6>
                                        <h6>
                        <span class="icon">
                            <i class="far fa-clock"></i>
                        </span>
                        木曜日：<%= st.thursday%>
                    </h6>
                                        <h6>
                        <span class="icon">
                            <i class="far fa-clock"></i>
                        </span>
                        金曜日：<%= st.friday%>
                    </h6>
                                        <h6>
                        <span class="icon">
                            <i class="far fa-clock"></i>
                        </span>
                        土曜日：<%= st.saturday%>
                    </h6>
                                           <h6>
                        <span class="icon">
                            <i class="far fa-clock"></i>
                        </span>
                        日曜日：<%= st.sunday%>
                    </h6>
                    <h6>
                        <span class="icon">
                            <i class="far fa-credit-card"></i>
                        </span>
                        電子マネー：<%= st.elec%>
                    </h6>
                    <h6>
                        <span class="icon">
                            <i class="fas fa-credit-card"></i>
                        </span>
                        クレジットカード：<%= st.card%>
                    </h6>
                    <h6>
                        <span class="icon">
                            <i class="fas fa-qrcode"></i>
                        </span>
                        QRコード決済：<%= st.qr%>
                    </h6>
                    <span class="icon">
                        <i class="fab fa-google"></i>
                    </span>
                    <a href="<%= st.googlemap%>"><%= st.googlemap%></a><br>
                    <span class="icon">
                        <i class="fas fa-utensils"></i>
                    </span>
                    <a href="<%= st.tabelog%>"><%= st.tabelog%></a><br>
                    <span class="icon">
                        <i class="fas fa-home"></i>
                    </span>
                    <a href="<%= st.homepage%>"><%= st.homepage%></a>
                    <br />

                    <br />
